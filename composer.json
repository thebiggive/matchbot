{
    "name": "thebiggive/matchbot",
    "description": "Microservice providing donation matching and related APIs",
    "license": "MIT",
    "minimum-stability": "stable",
    "type": "project",
    "authors": [
        {
            "name": "Noel Light-Hilary",
            "email": "noel@webful.uk"
        }
    ],
    "require": {
        "php": "7.3.*",
        "ext-bcmath": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "doctrine/migrations": "^2.1",
        "doctrine/orm": "^2.6",
        "firebase/php-jwt": "^5.0",
        "guzzlehttp/guzzle": "^6.3",
        "monolog/monolog": "^2.0",
        "php-di/php-di": "^6.0",
        "ramsey/uuid-doctrine": "^1.5",
        "slim/psr7": "^0.6.0",
        "slim/slim": "^4.3",
        "symfony/console": "^4.3",
        "symfony/lock": "^4.3",
        "symfony/property-access": "^4.3",
        "symfony/serializer": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MatchBot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MatchBot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "doctrine:cache:clear": "doctrine orm:clear-cache:metadata",
        "doctrine:migrate": "doctrine-migrations migrate --no-interaction --allow-no-migration",
        "doctrine:migrate:diff": ["@doctrine:cache:clear", "doctrine-migrations diff"],
        "doctrine:delete-and-recreate": [
            "doctrine orm:schema-tool:drop --force",
            "doctrine orm:schema-tool:create",
            "@doctrine:migrate"
        ],
        "doctrine:ensure-prod": "doctrine orm:ensure-production-settings",
        "doctrine:validate": ["@doctrine:cache:clear", "doctrine orm:validate-schema"],
        "lint:check": "phpcs --standard=phpcs.xml -s .",
        "lint:fix": "phpcbf --standard=phpcs.xml -s .",
        "matchbot:expire-match-funds": "php matchbot-cli.php matchbot:expire-match-funds",
        "matchbot:push-donations": "php matchbot-cli.php matchbot:push-donations",
        "matchbot:update-campaigns": "php matchbot-cli.php matchbot:update-campaigns",
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
