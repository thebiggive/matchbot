    override as appropriate for VAT-enabled tests. -->
    <env name="VAT_LIVE_DATE" value="2100-01-01" force="true" />
    <env name="WEBHOOK_DONATION_SECRET" value="unitTestCchSecret" force="true"/>
  </php>
</phpunit>
