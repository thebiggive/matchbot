{
    "$schema": "vendor/infection/infection/resources/schema.json",
    "source": {
        "directories": [
            "src"
        ],
        "excludes": [
            "Migrations"
        ]
    },
    "mutators": {
        "@default": true
    },
    "logs": {
        "text": "reports/infection.log",
        "html": "reports/infection.html",
        "summary": "reports/summary.log",
        "json": "reports/infection-log.json",
        "perMutator": "reports/per-mutator.md.txt",
        "stryker": {
            "badge": "/^release-.*$/"
        },
        "summaryJson": "reports/summary.json"
    }
}